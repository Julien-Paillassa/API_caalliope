{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": [
    //"src/**/*", 
    //"src/utils/filters/http-exception.filter.ts",
    //"src/utils/guards/auth.guard.ts",
    //"src/modules/auth/auth.service.ts",
    //"src/modules/auth/dto/sign-in.dto.ts",
    //"src/modules/saga/entities/saga.entity.ts",
    //"src/utils/middlewares/authenticate.middleware.ts",
    //"src/modules/auth/dto/sign-up.dto.ts"
    "src/*", 
    "src/modules/user-type/entities/user-type.entity.ts",
    "src/modules/subscription/entities/subscription.entity.ts",
    "src/modules/author/author.controller.ts",
    "src/modules/author/author.module.ts",
    "src/modules/user/entities/user-role.enum.ts",
    "src/modules/book/book.controller.ts",
    "src/modules/book/book.module.ts",
    "src/modules/format/format.controller.ts",
    "src/modules/format/format.module.ts",
    "src/modules/genre/genre.controller.ts",
    "src/modules/genre/genre.service.ts",
    "src/modules/genre/genre.module.ts",
    "src/modules/publisher/publisher.controller.ts",
    "src/modules/publisher/publisher.service.ts",
    "src/modules/publisher/publisher.module.ts",
  ],
  "ignorePatterns": ["src/modules/auth/constantes.ts"],
  "exclude": ["node_modules", "dist"],
  "watchOptions": {
    "watchFile": "priorityPollingInterval",
    "watchDirectory": "dynamicPriorityPolling",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "dist", "src"]
  }
}
